<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditDevice"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <Spinner
        android:id="@+id/ED_spinner"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:layout_marginTop="15dp"
        android:popupBackground="@drawable/rounded_black_rectangle" />

    <ScrollView
        android:id="@+id/ED_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_black_rectangle"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="70dp"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/ED_floating_white_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="4dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:id="@+id/ED_name_ll_row"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="100"
                android:background="@drawable/rounded_black_rectangle"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true">

                <TextView
                    android:id="@+id/name_label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Name"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:textSize="20sp"
                    android:textColor="#e3e3e3"
                    android:fontFamily="@font/skmod"
                    android:singleLine="true" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff" />

                <EditText
                    android:id="@+id/nick_name_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="59"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:fontFamily="@font/skmod"
                    android:textStyle="bold"
                    android:background="@null"
                    android:inputType="textVisiblePassword"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ED_ip_ll_row"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="100"
                android:background="@drawable/rounded_black_rectangle">

                <TextView
                    android:id="@+id/ip_label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="IP"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:textColor="#e3e3e3"
                    android:fontFamily="@font/skmod" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff" />

                <EditText
                    android:id="@+id/ip_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="59"
                    android:textSize="15sp"
                    android:editable="false"
                    android:textColor="#fff"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:fontFamily="@font/skmod"
                    android:textStyle="bold"
                    android:background="@null"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ED_mac_ll_row"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="100"
                android:background="@drawable/rounded_black_rectangle">

                <TextView
                    android:id="@+id/mac_label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="MAC"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:textColor="#e3e3e3"
                    android:fontFamily="@font/skmod" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff" />

                <EditText
                    android:id="@+id/mac_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="59"
                    android:textSize="13sp"
                    android:editable="false"
                    android:textColor="#fff"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:background="@null"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ED_domain_ll_row"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="100"
                android:background="@drawable/rounded_black_rectangle">

                <TextView
                    android:id="@+id/domain_label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Domain"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:textColor="#e3e3e3"
                    android:fontFamily="@font/skmod" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/domain_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="59"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:fontFamily="@font/skmod"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ED_download_ll_row"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="100"
                android:background="@drawable/rounded_black_rectangle"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true">

                <TextView
                    android:id="@+id/download_label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Download"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:textSize="18sp"
                    android:textColor="#e3e3e3"
                    android:fontFamily="@font/skmod"
                    android:singleLine="true"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff" />

                <EditText
                    android:id="@+id/download_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="59"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:fontFamily="@font/skmod"
                    android:textStyle="bold"
                    android:editable="false"
                    android:background="@null"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ED_upload_ll_row"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="100"
                android:background="@drawable/rounded_black_rectangle"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true">

                <TextView
                    android:id="@+id/upload_label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Upload"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:textSize="20sp"
                    android:textColor="#e3e3e3"
                    android:fontFamily="@font/skmod"
                    android:singleLine="true"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff" />

                <EditText
                    android:id="@+id/upload_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="59"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:fontFamily="@font/skmod"
                    android:textStyle="bold"
                    android:editable="false"
                    android:background="@null"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ED_connection_type_ll_row"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="100"
                android:background="@drawable/rounded_black_rectangle"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true">

                <TextView
                    android:id="@+id/connection_type__label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:text="Type"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:textSize="20sp"
                    android:textColor="#e3e3e3"
                    android:fontFamily="@font/skmod"
                    android:singleLine="true"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff" />

                <EditText
                    android:id="@+id/connection_type_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="59"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:singleLine="true"
                    android:fontFamily="@font/skmod"
                    android:textStyle="bold"
                    android:editable="false"
                    android:background="@null"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



    <Button
        android:id="@+id/ED_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_margin="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>